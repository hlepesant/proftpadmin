{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
  {% if csrf_token %}
      <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
  {% endif %}

  <img class="mb-4" src="{{ asset('media/proftpd-logo.png') }}" alt="">
  <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

  <label class="sr-only" for="username">{{ 'security.login.username'|trans }}</label>
  <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" class="form-control" autofocus />

  <label class="sr-only" for="password">{{ 'security.login.password'|trans }}</label>
  <input type="password" id="password" name="_password" required="required" autocomplete="current-password" required="required"  class="form-control" />

  <div class="checkbox mb-3">
    <label for="remember_me">
      <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
      {{ 'security.login.remember_me'|trans }}
    </label>
  </div>

  <button class="btn btn-lg btn-primary btn-block" type="submit">{{ 'security.login.submit'|trans }}</button>
</form>
