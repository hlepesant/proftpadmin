{% extends 'base.html.twig' %}

{% block title %}FtpUser index{% endblock %}

{% block body %}
    <h1>Members for "{{ ftp_group.groupname }}"</h1>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col" class="col-sm-5">Identity</th>
                <th scope="col" class="col-sm-5">Username</th>
                <th scope="col" class="col-sm-1 text-right" colspan="3"><a href="{{ path('ftp_user_new', {'id_group': ftp_group.id}) }}" class="text-white"><img src="{{ asset('/media/famfam/add.png') }}" alt="Create" /></a></th>
            </tr>
        </thead>
        <tbody>
        {% for ftp_user in ftp_users %}
            <tr>
                <td>{{ ftp_user.firstname }} {{ ftp_user.lastname }}</td>
                <td>{{ ftp_user.username }}</td>
                <td class="text-right"><a href="{{ path('ftp_user_password', {'id_group': ftp_group.id, 'id': ftp_user.id}) }}"><img src="{{ asset('/media/famfam/key.png') }}" alt="Password" /></a> </td>
                <td class="text-right">
                {% if is_granted('ROLE_ADMIN') %}
					{{ include('ftp_user/_delete_form.html.twig') }}
                {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
